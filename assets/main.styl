body
    .d-header-icons 
        .d-icon
            fill #ffffff
            opacity 1
    .d-header 
        .title 
            a
                display block
                background url('assets/img/logo.svg') 0 0 no-repeat
                width 120px
                height 40px
                img 
                    display none
    .list-controls 
        .select-kit
            border-radius 4px
            border-color #31393A
    .discourse-no-touch
        background-color #F5F5F5
    .list-controls 
        .select-kit
            &.categories-admin-dropdown 
                .select-kit-header 
                    .d-icon
                        fill #31393A
                button
                    background-color #F5F5F5
                    border-radius 4px
    .category-list 
        tbody
            border-top none
            .category
                border-color transparent !important
                border-radius 4px
                box-shadow 0 3px 6px rgba(0, 0, 0, .16)
    .nav-pills
        >li
            >a
                &.active
                    font-weight 900
    .list-controls 
        .combo-box 
            .combo-box-header
                border-radius 4px